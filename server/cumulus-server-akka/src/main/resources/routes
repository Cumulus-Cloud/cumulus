GET     /api/sharings/:ref               io.cumulus.controllers.api.SharingController.get(ref: String)
DELETE  /api/sharings/:ref               io.cumulus.controllers.api.SharingController.delete(ref: io.cumulus.models.fs.Path)

# API - Shared (visitor)
GET     /api/shared/fs*path              io.cumulus.controllers.api.SharingPublicController.get(path: io.cumulus.models.fs.Path, reference, key)
GET     /api/shared/download*path        io.cumulus.controllers.api.SharingPublicController.download(path: io.cumulus.models.fs.Path, reference, key, download: Option[Boolean])

# Shared (visitor) 'pretty' routes for root element (file)
GET     /shared/download/:ref/:name      io.cumulus.controllers.api.SharingPublicController.downloadRoot(ref, name, key, download: Option[Boolean])

