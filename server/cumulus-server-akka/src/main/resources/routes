
# Administration endpoints
POST    /api/admin/users                 io.cumulus.controllers.api.admin.UserAdminController.create
GET     /api/admin/users                 io.cumulus.controllers.api.admin.UserAdminController.list(limit: Option[Int], offset: Option[Int])
GET     /api/admin/users/:ref            io.cumulus.controllers.api.admin.UserAdminController.get(ref: String)
POST    /api/admin/users/:ref            io.cumulus.controllers.api.admin.UserAdminController.update(ref: String)
DELETE  /api/admin/users/:ref            io.cumulus.controllers.api.admin.UserAdminController.deactivate(ref: String)

# User management routes
