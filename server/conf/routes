
# App entrypoint
GET     /                             io.cumulus.controllers.HomeController.index

# User management routes
POST    /users/login                  io.cumulus.controllers.UserController.login
POST    /users/logout                 io.cumulus.controllers.UserController.logout
POST    /users/signup                 io.cumulus.controllers.UserController.signUp
GET     /users/me                     io.cumulus.controllers.UserController.me

# API - FS get/update routes
GET     /api/tree                     io.cumulus.controllers.FileSystemController.tree
GET     /api/fs*path                  io.cumulus.controllers.FileSystemController.get(path: Path)
PUT     /api/fs*path                  io.cumulus.controllers.FileSystemController.create(path: Path)
POST    /api/fs*path                  io.cumulus.controllers.FileSystemController.update(path: Path)
DELETE  /api/fs*path                  io.cumulus.controllers.FileSystemController.delete(path: Path)

# API - Upload and download routes
POST    /api/upload*path              io.cumulus.controllers.FileSystemController.upload(path: Path)
GET     /api/download*path            io.cumulus.controllers.FileSystemController.download(path: Path, download: Option[Boolean])
GET     /api/stream*path              io.cumulus.controllers.FileSystemController.stream(path: Path)

# API - Shared
GET     /api/shared/fs*path           io.cumulus.controllers.SharingController.get(path: Path, reference, key)
GET     /api/shared/download*path     io.cumulus.controllers.SharingController.download(path: Path, reference, key, download: Option[Boolean])
GET     /api/shared/stream*path       io.cumulus.controllers.SharingController.stream(path: Path, reference, key)

# Shared 'pretty' routes for root element (file)
GET     /shared/download/:reference   io.cumulus.controllers.SharingController.downloadRoot(reference, key, download: Option[Boolean])
GET     /shared/stream/:reference     io.cumulus.controllers.SharingController.streamRoot(reference, key)

# Test routes
GET     /test                         io.cumulus.controllers.HomeController.test
GET     /test/login                   io.cumulus.controllers.HomeController.testLogin

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 io.cumulus.controllers.utils.Assets.versioned(path = "/public", file: controllers.Assets.Asset)
