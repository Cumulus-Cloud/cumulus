{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "types" : [],
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": [
      "src/**/*"
  ]
}