# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

# Test
GET     /bootstrap                  controllers.HomeController.bootstrap
GET     /dir*location               controllers.HomeController.getDirectory(location: String)

POST    /accounts/login             controllers.AccountController.login
POST    /accounts/signup            controllers.AccountController.signUp
GET     /accounts/me                controllers.AccountController.me

POST    /testUpload/:filename       controllers.HomeController.testUpload(filename: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
