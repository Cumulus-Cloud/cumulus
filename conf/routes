# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

POST    /accounts/login             controllers.AccountController.login
POST    /accounts/signup            controllers.AccountController.signUp
GET     /accounts/me                controllers.AccountController.me

GET     /api/directory*path         controllers.DirectoriesController.list(path)
POST    /api/directory*path         controllers.DirectoriesController.create(path)
DELETE  /api/directory*path         controllers.DirectoriesController.delete(path)
# TODO move

GET     /api/file*path              controllers.FilesController.show(path)
PUT     /api/file*path              controllers.FilesController.create(path)
DELETE  /api/file*path              controllers.FilesController.delete(path)
# TODO move

GET     /api/upload*path            controllers.FilesController.upload(path)
GET     /api/download*path          controllers.FilesController.download(path)
GET     /api/stream*path            controllers.FilesController.stream(path)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
