# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

# Test
GET     /bootstrap                  controllers.HomeController.bootstrap
GET     /dir*location               controllers.HomeController.getDirectory(location: String)

GET     /accounts/:login            controllers.HomeController.getAccount(login: String)
POST    /accounts                   controllers.HomeController.createAccount

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
